{
  "transform": {
    "^.+\\.(t|j)sx?$": "esbuild-jest"
  },
  "transformIgnorePatterns": ["/node_modules/(?!roamjs-components)", "\\.pnp\\.[^\\\/]+$"],
  "testEnvironment": "node",
  "testRegex": "/tests/.*\\.test\\.ts$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "jsx": "react"
      }
    }
  }
}
